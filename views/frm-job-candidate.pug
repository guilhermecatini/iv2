extends layout

block content
	form(action="/job-candidate", method="post", style="margin-top: 15px;")
		div.card
			div.card-header
				| Cadastro de Candidato
			div.card-body
				div.row
					div.col-12
						label(for="full_name") Nome Completo
						input.form-control.form-control-sm(type="text", name="full_name", id="full_name")
				div.row
					div.col-12
						label(for="interview_date") Data da Entrevista
						input.form-control.form-control-sm(type="text", name="interview_date", id="interview_date")
				div.row
					div.col-12
						label(for="vacancy") Vaga
                        select
				div.row
					div.col-12
						label(for="celular") Observações
						input.form-control.form-control-sm(type="text", name="celular", id="celular")
				div.row
					div.col-12
						hr
						button.btn.btn-sm.btn-dark(type="submit") Gravar
						button.btn.btn-sm.btn-dark(type="button", style="margin-left: 5px;", id="btn_gerar_html") Gerar HTML
	div.card(style="margin-top: 15px; display: none;", id="divCustomHtml")
		div.card-body
			div.row
				div.col-12
					label HTML
					textarea.form-control(id="customHTML", rows="7")
					hr
					button.btn.btn-dark.btn-sm.btn-block(type="button") Copiar Para Área de Transferência
